{
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": { "*": ["./src/*"] },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": { "compilerOptions": { "module": "commonJS" } },
  "include": ["./config/jest/setupTests.ts", "./src/**/*", "./typings/**/*"]
}
